    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch tests via NPM",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "test",
                "--",
                "--runInBand",
                "--no-cache"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "Launch init-test-data via NPM",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "init-test-data"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "Launch db.js via NPM",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "init-app"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "Launch test-db.js via NPM",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "init-test-data"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        }
    ]
}
